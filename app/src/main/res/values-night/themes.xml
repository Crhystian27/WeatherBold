<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark Mode -->
    <style name="Theme.WeatherBold" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Lighter for dark mode -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary_dark</item>
        
        <!-- Secondary brand color - Lighter for dark mode -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        
        <!-- Card colors -->
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        
        <!-- Divider color -->
        <item name="android:listDivider">@drawable/divider_dark</item>
    </style>
    
    <style name="Theme.WeatherBold.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary_dark</item>
    </style>

    <style name="Theme.WeatherBold.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />
    
    <!-- Card Style with Elevation for Dark Mode -->
    <style name="WeatherCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
    </style>
    
    <!-- Button Styles for Dark Mode -->
    <style name="WeatherButton.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textColor">@color/text_on_primary_dark</item>
    </style>
    
    <style name="WeatherButton.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_dark</item>
        <item name="android:textColor">@color/secondary_dark</item>
    </style>
    
    <!-- Text Styles for Dark Mode -->
    <style name="TextAppearance.WeatherBold.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.WeatherBold.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextAppearance.WeatherBold.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>
    
    <!-- Splash Screen Theme for Dark Mode -->
    <style name="Theme.WeatherBold.Splash" parent="Theme.WeatherBold.NoActionBar">
        <item name="android:windowBackground">@color/surface_dark</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
