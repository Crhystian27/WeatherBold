<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33ff2947">
    <!-- Ripple color with 20% opacity of gradient_start -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0A0f186f"
                android:centerColor="#0A7a1e5b"
                android:endColor="#0Aff2947"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</ripple>
